
<div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
         <tr>
           <th><%= image_tag @user.get_profile_image("100x100") %></th>
           <th></th>
         </tr>

         <tr>
           <th>name</th>
           <th><%= @user.name %></th>
         </tr>

         <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
         </tr>

        </tbody>
      </table>
        <div class="row">
          <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
           <span class=""></span>
          <% end %>
        </div>
      <div>
       <h1>New book</h1>
       <%= form_with model: book, local: true do |f| %>
        <h4>Title</h4>
         <%= f.text_field :title %>
        <h4>Opinion</h4>
         <%= f.text_area :body %>
         <%= f.submit 'Create Book', class:"btn btn-success" %>
       <% end %>
       </div>
</div>