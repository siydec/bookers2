<div class="container">
 <div class="text-danger">
   <% if @book.errors.any? %>
   <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <% @book.errors.full_messages.each do |message| %>
    <ul><li><%= message %></li></ul>
    <% end %>
   <% end %>
   </div>
  <div class="row">
   <%= render partial:'leftside', locals:{ book: @book} %>
    <div class="col-md-6">
     <h2>Books</h2>
     <table class="table">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
         </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
         <tr>
           <td><%= link_to controller:"users", action:"show", id: (book.user_id) do %>
               <%= image_tag book.user.get_profile_image("100x100")  %>
            <% end %>
            </td>
           <td><%= link_to book.title, controller:"books", action:"show", id: book %></td>
           <td><%= book.body %></td>
         </tr>
       </tbody>
         <% end %>
     </table>
    </div>
  </div>
</div>


