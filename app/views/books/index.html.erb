<h1>Books#index</h1>


<div class="container">
  <div class="row">
   <%= render 'leftside' %>
    <div class="col-md-6">
     <h2>Books</h2>
     <table class="table">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
         </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
         <tr>
           <td><%= image_tag book.user.get_profile_image("100x100") %></td>
           <td><%= link_to book.title, controller:"books", action:"show", id: book %></td>
           <td><%= book.body %></td>
         </tr>
       </tbody>
         <% end %>
     </table>
    </div>
  </div>
</div>


