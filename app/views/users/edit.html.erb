<div class="container">
  <div class="row">
    <div class="col-4">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      <div class="form_group">
      <label for="inputName">Name</label>
      <%= f.text_field :name,autofocus: true, id:"inputName",placeholder:"current_user.name" %>
      </div>
      <div class="form_group">
      <label for="inputImage">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", acccept: "image/*" %>
      </div>
      <div class="form_group">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction,autofocus: true, id:"inputIntroduction" %>
      </div>
      <div class="form_group">
      <%= f.submit"Update user" %>
      </div>
    </div>
    <% end %>
  </div>
</div>