<div class="text-success"><%= flash[:notice] %></div>
<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render partial: 'books/leftside', locals: {book: @book} %>
    <div class="col-md-8">
     <h2>Books</h2>
     <table class="table">
       <thead>
         <tr>
           <th>Title</th>
           <th>Opinion</th>
         </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
         <tr>
           <td><%= image_tag book.user.get_profile_image("100x100") %></td>
           <td><%= link_to book.title, controller:"books", action: "show", id: book %></td>
           <td><%= book.body %></td>
           <td></td>
           <td></td>
         </tr>
       </tbody>
         <% end %>
      </table>
    </div>
  </div>
</div>


